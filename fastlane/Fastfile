default_platform(:ios)

platform :ios do
  desc "Push a new beta build to TestFlight"
  lane :beta do
    match(
      type: "appstore", 
      readonly: true,
      git_url: generate_git_url(repo: "Masaya1582/ios-certificates"),
    )
    
    build_app(
      scheme: "FlashEnglish", 
      export_method: "app-store"
    )
    upload_to_testflight(
      skip_waiting_for_build_processing: true
    )
  end
end