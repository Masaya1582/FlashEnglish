default_platform(:ios)

platform :ios do
  desc "Upload to Firebase"
  lane :distribute do
    match(
      type: "adhoc", 
      readonly: true
    )

    current_build_number = get_build_number(xcodeproj: "FlashEnglish.xcodeproj")
    new_build_number = current_build_number.to_i + 1
    increment_build_number(
      build_number: new_build_number
    )
    version_number = get_info_plist_value(path: "./FlashEnglish/Resources/Info.plist", key: "CFBundleShortVersionString")

    add_badge()

    gym(
      scheme: "FlashEnglish",
      export_method: "ad-hoc",
      configuration: "Debug"
    )
    
    firebase_app_distribution(
      app: ENV["FIREBASE_APP_ID"],
      release_notes: "Beta Release: #{version_number} (Build: #{new_build_number})",
      firebase_cli_token: ENV["FIREBASE_APP_DISTRIBUTION_API_TOKEN"],
      testers: ENV["FIREBASE_TESTERS"]
    )
  end

  desc "Build and upload to the App Store"
  lane :upload_appstore do
    match(
      type: "appstore", 
      readonly: true
    )

    increment_build_number(
      build_number: latest_testflight_build_number(app_identifier: "com.masa4y44.FlashEnglish") + 1
    )

    gym(
      scheme: "FlashEnglish",
      export_method: "app-store",
      configuration: "Release"
    )
    
    upload_to_app_store(
      skip_metadata: true,
      skip_screenshots: true,
      automatic_release: false,
      precheck_include_in_app_purchases: false
    )
  end
end