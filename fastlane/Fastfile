default_platform(:ios)

platform :ios do
  desc "Push a new beta build to TestFlight"
  lane :beta do
    # 証明書の取得
    match(
      api_key_path: "/Users/masayanakakuki/keys/app-store-connect-api-key.json",
      type: "appstore", 
      readonly: true,
      git_url: "git@github.com:Masaya1582/ios-certificates.git"
    )
    
    # アプリのビルドとアップロード
    build_app(
      scheme: "FlashEnglish", 
      export_method: "app-store"
    )
    upload_to_testflight()
  end
end