default_platform(:ios)

platform :ios do
  desc "Push a new beta build to TestFlight"
  lane :beta do
    git_url = "https://Masaya1582:#{ENV['GIT_AUTH_TOKEN']}@github.com/Masaya1582/ios-certificates"
    match(
      type: "appstore", 
      readonly: true,
      git_url: git_url
    )
    build_app(
      scheme: "FlashEnglish", # スキーム名をプロジェクトに合わせて設定
      export_method: "app-store" # App Store用のビルドをエクスポート
    )
    upload_to_testflight(
      skip_waiting_for_build_processing: true
    )
  end
end