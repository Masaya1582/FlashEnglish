default_platform(:ios)

platform :ios do
  desc "Push a new beta build to TestFlight"
  lane :deploy do
    # 証明書の取得
    match(
      api_key_path: "./app-store-connect-api-key.json",
      type: "appstore",
      app_identifier: ['com.masa4y44.FlashEnglish'],
      git_url: "git@github.com:Masaya1582/ios-certificates.git",
      readonly: true
    )

    # アプリのビルド
    gym(
      workspace: "FlashEnglish.xcworkspace",  # ワークスペースのパス
      scheme: "FlashEnglish"                  # スキーム名
    )

    # TestFlightへのアップロード
    pilot(
      api_key_path: "./app-store-connect-api-key.json"
    )
  end
end