default_platform(:ios)

platform :ios do
  desc "Push a new beta build to TestFlight"
  lane :beta do
    match(
      type: "appstore", 
      readonly: true,
      git_url: "https://github.com/Masaya1582/ios-certificate" # 証明書管理用のプライベートリポジトリを指定
    )
    build_app(
      scheme: "FlashEnglish", # スキーム名をプロジェクトに合わせて設定
      export_method: "app-store" # App Store用のビルドをエクスポート
    )
    upload_to_testflight(
      skip_waiting_for_build_processing: true
    )
  end
end